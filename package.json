{
  "name": "markdown-editor-viewer",
  "version": "1.5.2",
  "description": "Windows Markdown Editor and Viewer",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "dist": "electron-builder --win nsis"
  },
  "build": {
    "appId": "com.markdowneditor.app",
    "productName": "Markdown Editor",
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "icon.ico",
      "fileAssociations": [
        {
          "ext": "md",
          "name": "Markdown File",
          "icon": "icon.ico"
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "installerHeaderIcon": "icon.ico",
      "installerIcon": "icon.ico",
      "uninstallerIcon": "icon.ico",
      "installerHeader": "installer-header.bmp",
      "installerSidebar": "installer-sidebar.bmp",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Markdown Editor"
    }
  },
  "dependencies": {
    "codemirror": "^5.65.16",
    "highlight.js": "^11.9.0",
    "marked": "^11.1.1"
  },
  "devDependencies": {
    "electron": "^28.1.0",
    "electron-builder": "^24.13.3"
  }
}
